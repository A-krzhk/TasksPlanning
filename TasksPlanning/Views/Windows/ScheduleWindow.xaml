<Window x:Class="TasksPlanning.Views.Windows.ScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TasksPlanning.Views.Windows"
        mc:Ignorable="d"
        Title="ScheduleWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListView x:Name="EmployView">
        </ListView>
        <ListView Grid.Column="1" x:Name="TasksView" Margin="0,0,200,0">
        </ListView>
        <Label x:Name="EndLastTask" Grid.Column="1" Content="Label" HorizontalAlignment="Right"  VerticalAlignment="Top" Margin="0,0,10,0"/>
        <Button Grid.Column="1" Content="Download results" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,25,0,0" Click="Button_Click"/>



    </Grid>
</Window>
